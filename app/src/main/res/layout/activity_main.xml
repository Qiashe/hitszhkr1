<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainDrawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent">


<!--        地图控件待解决-->
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/map_example"
            android:scaleType="centerCrop">
        </ImageView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipToPadding="true"
            android:fitsSystemWindows="true">

            <androidx.appcompat.widget.Toolbar
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="@color/colorPrimaryDark">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageButton
                        android:id="@+id/button_draw_out"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:src="@drawable/ic_index">
                    </ImageButton>

                    <SearchView
                        android:id="@+id/search1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="9"
                        android:queryHint="因为我对这土地爱得深沉"
                        app:queryHint="因为我对这土地爱得深沉">
                    </SearchView>

                </LinearLayout>

            </androidx.appcompat.widget.Toolbar>

        </LinearLayout>

        <LinearLayout
            android:clipToPadding="true"
            android:fitsSystemWindows="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="bottom">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:text="校园生活管家 开发版本"/>


            <com.google.android.material.bottomnavigation.BottomNavigationView
                android:id="@+id/bottom_1"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:menu="@menu/nav_bottom_menu">
            </com.google.android.material.bottomnavigation.BottomNavigationView>

        </LinearLayout>

    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="start">

        <com.google.android.material.navigation.NavigationView
            android:id="@+id/mainNavigation"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:theme="@style/NavigationViewText"
            app:menu="@menu/nav_menu"
            app:headerLayout="@layout/nav_header"
            app:itemHorizontalPadding="30dp"
            app:itemTextColor="#00bafe"
            >
        </com.google.android.material.navigation.NavigationView>

        <View
            android:layout_gravity="bottom"
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:background="#eee"
            android:layout_marginBottom="55dp">
        </View>

        <FrameLayout
            android:layout_gravity="bottom"
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <ImageButton
                android:id="@+id/nightmode_button"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="left"
                android:src="@drawable/ic_nightmode"
                android:layout_marginLeft="20dp"
                android:scaleType="centerCrop">
            </ImageButton>
            <ImageButton
                android:id="@+id/scan_button"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="right"
                android:src="@drawable/ic_scan"
                android:layout_marginRight="20dp"
                android:scaleType="centerCrop">
            </ImageButton>


        </FrameLayout>

    </FrameLayout>

</androidx.drawerlayout.widget.DrawerLayout>