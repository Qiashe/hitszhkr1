<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CanteenItemActivity"
    tools:ignore="ExtraText"
    android:fitsSystemWindows="true">

<!--    折叠式标题栏-->
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appbar_item"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:fitsSystemWindows="true">

        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:id="@+id/collapse_item"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            app:layout_scrollFlags="scroll|exitUntilCollapsed"
            android:fitsSystemWindows="true">

            <ImageView
                android:id="@+id/image_item"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                app:layout_collapseMode="parallax"
                android:fitsSystemWindows="true">
            </ImageView>

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar_item"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:layout_collapseMode="pin">
            </androidx.appcompat.widget.Toolbar>

        </com.google.android.material.appbar.CollapsingToolbarLayout>

    </com.google.android.material.appbar.AppBarLayout>

<!--    内容栏-->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

<!--        套个娃-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp">

<!--            名称&&价格-->
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/name_of_item"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="35sp"
                    android:layout_gravity="start">
                </TextView>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_gravity="end"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/price_icon"
                        android:layout_width="45sp"
                        android:layout_height="45sp"
                        android:src="@drawable/ic_price">
                    </ImageView>

                    <TextView
                        android:id="@+id/price_of_item"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="35sp">
                    </TextView>

                </LinearLayout>

            </FrameLayout>

<!--            评分以及标签控件-->
            <com.google.android.material.card.MaterialCardView
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                app:cardCornerRadius="30dp"
                android:background="#f0f0f0">
<!--             套娃-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

<!--                    评分控件-->
                    <FrameLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="10">
                        <ImageView
                            android:id="@+id/star_mark"
                            android:layout_gravity="center|top"
                            android:layout_marginTop="20dp"
                            android:layout_width="20dp"
                            android:layout_height="20dp"/>
                        <TextView
                            android:id="@+id/mark_text"
                            android:layout_gravity="center|bottom"
                            android:layout_marginBottom="20dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </FrameLayout>
<!--                    评分控件结束-->

                    <View
                        android:layout_width="3dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:layout_height="match_parent"
                        android:background="#eee">
                    </View>

<!--                标签控件1-->
                    <FrameLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="10">
                        <TextView
                            android:id="@+id/label_text1"
                            android:layout_gravity="center|top"
                            android:layout_marginTop="20dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <ImageView
                            android:id="@+id/label_icon1"
                            android:layout_gravity="center|bottom"
                            android:layout_marginBottom="20dp"
                            android:layout_width="20dp"
                            android:layout_height="20dp"/>
                    </FrameLayout>
<!--                标签控件1结束-->

                    <View
                        android:layout_width="3dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:layout_height="match_parent"
                        android:background="#eee">
                    </View>

<!--                标签控件2-->
                    <FrameLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="10">
                        <TextView
                            android:id="@+id/label_text2"
                            android:layout_gravity="center|top"
                            android:layout_marginTop="20dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <ImageView
                            android:id="@+id/label_icon2"
                            android:layout_gravity="center|bottom"
                            android:layout_marginBottom="20dp"
                            android:layout_width="20dp"
                            android:layout_height="20dp"/>
                    </FrameLayout>
<!--                标签控件2结束-->

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>
<!--        悬浮标签控件结束-->

<!--            简介标题控件-->
            <TextView
                android:id="@+id/item_about_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="25sp">
            </TextView>
<!--            简介标题控件结束-->
<!--            简介控件-->
            <TextView
                android:id="@+id/item_about_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:paddingVertical="10dp">
            </TextView>
<!--            简介控件结束-->

<!--            图片标题控件-->
            <TextView
                android:id="@+id/picture_about_title"
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="25sp">
            </TextView>
<!--            图片标题控件结束-->
<!--            图片控件-->
            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="100dp">

                <ImageView
                    android:id="@+id/picture_about1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:layout_marginHorizontal="5dp"
                    android:layout_weight="1"/>
                <ImageView
                    android:id="@+id/picture_about2"
                    android:layout_width="0dp"
                    android:scaleType="centerCrop"
                    android:layout_height="match_parent"
                    android:layout_marginHorizontal="5dp"
                    android:layout_weight="1"/>
                <ImageView
                    android:id="@+id/picture_about3"
                    android:layout_width="0dp"
                    android:scaleType="centerCrop"
                    android:layout_height="match_parent"
                    android:layout_marginHorizontal="5dp"
                    android:layout_weight="1"/>
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="100dp">

                <ImageView
                    android:id="@+id/picture_about4"
                    android:layout_width="0dp"
                    android:scaleType="centerCrop"
                    android:layout_height="match_parent"
                    android:layout_marginHorizontal="5dp"
                    android:layout_weight="1"/>
                <ImageView
                    android:id="@+id/picture_about5"
                    android:layout_width="0dp"
                    android:scaleType="centerCrop"
                    android:layout_height="match_parent"
                    android:layout_marginHorizontal="5dp"
                    android:layout_weight="1"/>
                <ImageView
                    android:id="@+id/picture_about6"
                    android:layout_width="0dp"
                    android:scaleType="centerCrop"
                    android:layout_height="match_parent"
                    android:layout_marginHorizontal="5dp"
                    android:layout_weight="1"/>
            </LinearLayout>
            <Button
                android:id="@+id/button_see_more"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="查看更多图片"
                android:textColor="#00bafe">
            </Button>
<!--            图片标题控件结束-->

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>